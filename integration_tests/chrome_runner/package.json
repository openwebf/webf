{
  "name": "webf-chrome-test-runner",
  "version": "1.0.0",
  "description": "Jasmine-based test runner for WebF integration tests in Chrome",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node lib/cli.js",
    "test:css-text": "npm run build && node lib/cli.js --scope=css-text",
    "test:dom-core": "npm run build && node lib/cli.js --scope=dom-core",
    "test:css-layout": "npm run build && node lib/cli.js --scope=css-layout",
    "test:all": "npm run build && node lib/cli.js --scope=all",
    "test:headed": "npm run build && node lib/cli.js --no-headless --devtools",
    "clean": "rimraf lib dist __expected__ test-report.json",
    "list-scopes": "npm run build && node lib/cli.js --list-scopes"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/minimatch": "^6.0.0",
    "@types/yargs": "^17.0.33",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "express-static-gzip": "^2.1.7",
    "fs-extra": "^11.1.1",
    "glob": "^10.0.0",
    "jasmine": "^5.1.0",
    "jasmine-core": "^4.6.0",
    "json5": "^2.2.0",
    "minimatch": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "open": "^8.4.0",
    "ora": "^5.4.1",
    "p-limit": "^3.1.0",
    "puppeteer": "^21.5.0",
    "ws": "^8.14.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@types/glob": "^8.1.0",
    "@types/jasmine": "^5.1.8",
    "@types/node": "^24.0.12",
    "babel-loader": "^9.1.0",
    "core-js": "^3.31.0",
    "css-loader": "^6.8.0",
    "esbuild": "^0.19.12",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "keywords": [
    "webf",
    "jasmine",
    "testing",
    "chrome",
    "integration"
  ],
  "license": "Apache-2.0"
}
