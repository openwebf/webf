  // Default configuration
  "defaultScope": "css-text",
  
  // Browser configuration
  "browser": {
    "headless": false,
    "devtools": true,
    "viewport": {
      "width": 1200,
      "height": 800
    }
  },
  
  // Test runner configuration
  "testRunner": {
    "timeout": 30000,
    "retries": 0,
    "parallel": false,
    "randomOrder": false,
    "stopOnFirstFailure": false
  },
  
  // Snapshot testing configuration
  "snapshots": {
    "enabled": true,
    "updateSnapshots": false,
    "threshold": 0.1,
    "pixelThreshold": 100
  },
  
  // Reporting configuration
  "reporting": {
    "console": true,
    "junit": false,
    "html": true,
    "coverage": false
  }
