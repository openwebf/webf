{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",
    "rootDir": "./lib/src",
    "baseUrl": ".",
    "paths": {
      "*": ["lib/src/*"]
    }
  },
  "include": ["lib/src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "types"]
}
